<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.software.fitness.dao.AttendanceDao">
    <insert id="insert" parameterType="com.software.fitness.domain.Attendance">
        insert into attendance
        (`course_id`, `member_id`, `date`)
        VALUES
        (#{course_id}, #{member_id}, #{date})
        <selectKey keyProperty="order_id" order="AFTER" resultType="java.lang.Integer">
            SELECT last_insert_id();
        </selectKey>
    </insert>

    <update id="update" parameterType="com.software.fitness.domain.Attendance">
        update attendance
        <set>
            course_id = #{course_id},
            member_id = #{member_id},
            date = #{date},
        </set>
        <selectKey keyProperty="order_id" order="AFTER" resultType="java.lang.Integer">
            SELECT ROW;
        </selectKey>
    </update>

    <delete id="delete" parameterType="com.software.fitness.domain.Attendance">

    </delete>
</mapper>